target_host=arm-linux-gnueabihf
toolchain=/usr/bin
cc_compiler=gcc
cxx_compiler=g++

[env]
# Toolchain downloaded from https://github.com/abhiTronix/raspberry-pi-cross-compilers#b-toolchain-binaries-description-table
CC=$target_host-$cc_compiler
CXX=$target_host-$cxx_compiler
CONAN_IMPORT_PATH="../../../build_rpi_release"
#CXXFLAGS=-I"$standalone_toolchain/$target_host/lib/include

[settings]
os=Linux
arch=armv7hf
compiler=gcc
compiler.version=8
